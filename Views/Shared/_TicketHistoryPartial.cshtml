@model IEnumerable<TicketHistory>

<div class="card custom-card">
    <div class="card-body">
        <div class="vtimeline">
            @{
                List<TicketHistory> histories = Model.ToList();
                @for (int i = 0; i < histories.Count(); i++)
                {
                    if (i % 2 == 0)
                    {
                        <div class="timeline-wrapper timeline-wrapper-primary">
                            <div class="timeline-badge"></div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <div class="timeline-title fw-bold">User: @histories[i].User?.FullName</div>
                                    <div class="timeline-body"><p>@histories[i].Description</p></div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="timeline-wrapper timeline-inverted timeline-wrapper-secondary">
                            <div class="timeline-badge"></div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <div class="timeline-title fw-bold">User: @histories[i].User?.FullName</div>
                                    <div class="timeline-body"><p>@histories[i].Description</p></div>
                                </div>
                            </div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>